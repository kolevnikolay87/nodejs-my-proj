pipeline {

    IMAGE_NAME = 'kolevnikolay87/mynodejsapp'

    agent {
        label 'my-openssh-slave'
    }

    tools {
        nodejs 'nodejs'
        dockerTool 'docker-tool'
    }

    triggers {
        githubPush()
    }

    environment {
        DOCKERHUB_CREDENTIALS = credentials('credentials-dockerhub')
    }

    stages {

        stage('Clean') {
            steps {
                cleanWs()
            }
        }

        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/kolevnikolay87/nodejs-my-proj.git'
            }
        }
        stage('Build') {
            steps {
                sh 'npm install'
                sh 'npm ci' //This is for building the nodejs project
            }
        }
        stage('Test') {
            steps {
                sh 'npm test' //This is for testing the nodejs modules
            }
        }

        stage('Docker Login') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }

        stage('Docker build and tag') {
            steps {
                sh 'docker build -t kolevnikolay87/mynodejsapp -f dockerfile2 .'
                sh 'docker tag kolevnikolay87/mynodejsapp kolevnikolay87/mynodejsapp:${BUILD_NUMBER}'
            }
        }
        stage('Docker Push') {
            steps {
                sh 'docker push kolevnikolay87/mynodejsapp:${BUILD_NUMBER}'
            }
        }
        stage('Deploy') {
           steps {
                sh 'pkill node | true'
                sh 'npm install -g forever'
                sh 'forever start src/index.js'
           }
        }
    }
}