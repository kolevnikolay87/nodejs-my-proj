pipeline {
    agent {
        label 'my-openssh-slave'
    }
    
    tools {
        nodejs 'nodejs'
    }
    
    stages {
        stage('CloneRepo') {
            steps {
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/kolevnikolay87/nodejs-my-proj.git'
            }
        }
        stage('Build') {
            steps {
                sh 'npm install'
                sh 'npm install -g forever'
                sh 'npm ci'
            }
        }
        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
        stage('Deployment') {
            steps {
                sh 'forever start src/index.js'
            }
        }
    }
}

